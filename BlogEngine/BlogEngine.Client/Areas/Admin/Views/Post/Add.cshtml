@model Post

@{
    ViewBag.Title = "Add Post";
    Layout = "_Layout";
}

@section Scripts {
    <script src="~/lib/tinymce/tinymce.min.js"></script>
    <script src="path/to/tinymce-vue.min.js"></script>
    <script src="~/admin/js/views/post/add.js"></script>
}

<h2>@ViewData["Title"]</h2>

<div class="container">
    <div class="row">
        <form id="post-add" v-on:submit="save">
            <div class="col-md-8 panel">
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" v-model="post.title" />
                </div>
                <div class="form-group">
                    <label asp-for="Summary"></label>
                    <input asp-for="Summary" class="form-control" v-model="post.summary" />
                </div>
                <div class="form-group">
                    <label asp-for="Content"></label>
                    <textarea asp-for="Content" class="form-control" v-model="post.content"></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Save</button>
                </div>
            </div>
            <div class="col-md-4 panel">
                <div class="panel-title">
                    <p>Category</p>
                </div>
                <div class="panel-body">
                    <div v-for="cat in categories" class="checkbox">
                        <label>
                            <input type="checkbox"
                                   v-bind:value="cat.id"
                                   v-bind:id="cat.id"
                                   v-model="cat.isSelected">
                            {{cat.name}}
                        </label>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

