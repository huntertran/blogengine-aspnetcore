@model IEnumerable<BlogEngine.Models.Category>

@{
    ViewData["Title"] = "Category Manager";
    Layout = "_Layout";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-2">
        <a class="btn btn-success">Add</a>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>No.</th>
                    <th>Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>@category.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
